<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="jesus.com.mylogin.acid_face_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Acid_Face_App">
        <activity
            android:name=".DetallesActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ProductosActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PedidosActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GoogleActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.ayuda.AyudaActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".PrincipalActivity"
            android:exported="false"
            android:label="@string/title_activity_principal"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Acid_Face_App.NoActionBar" />
        <activity
            android:name=".RecuperarActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegistroActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/splashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SesionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
    </application>

</manifest>